
generator client {
  provider = "prisma-client-js"
  previewFeatures=["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("databaseurl")
}
model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  phone String
}
